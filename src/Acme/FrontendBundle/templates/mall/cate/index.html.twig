{% extends 'mall.html.twig' %}

{% block title %}Member index{% endblock %}
{% block stylesheets %}
    <style>
    .cat-title{background-color:#df999f;border-color:#df999f;color:#FFF;font-weight: 700;}
    .gd-image img{ width:100%;height:270px;}
    .gd-title{
        font-size:0.9rem;margin:0.5rem 0;
        box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,.075);
        border-radius:0.25rem;padding:0.3rem;
        color:#000;
    }
    .gd-price{ font-weight:bold;color:red;padding:0.3rem;}
    #cate-goods-div a{
        display:block;
        text-align:center;
        overflow:hidden;
    }
    #cate-goods-div a:hover{
        animation: goodsHover 0.5s;
        transform: translateY(-1rem)
    }
    </style>
{% endblock %}
{% block javascripts %}
    <script>
        $(document).ready(function () {

        });
    </script>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-2 col-sm-2">
            <div class="list-group" id="list-tab" role="tablist">
            {% for p in cateList %}
              <a class="list-group-item list-group-item-action {% if p.id == cate.id %}active{% endif %}" href="/mall/cate/?cid={{p.id}}" >{{ p.title }}</a>
              {% endfor %}
            </div>
        </div>
        <div class="col-md-10 col-sm-10">
            <div class="cat-title mb-4 p-2 bg-opacity-50">
            {{cate.mark}}
            </div>
            {% for plist in goodsList %}
            <div class="row align-items-start" id="cate-goods-div">
                {% for p in plist %}
                {% if p.id==0 %}
                <div class="col"></div>
                {% else %}
                <div class="col">
                    <a href="/mall/goods/{{ p.id }}">
                    <div class="gd-image">
                        <img src="{{ p.logo }}" />
                    </div>
                    <div class="gd-title">
                        {{ p.title }}
                    </div>
                    <div class="gd-price">
                        <span class="text-decoration-line-through">￥{{ p.price }}</span>
                        <span class="ms-2">￥{{ p.real_price }}</span>
                    </div>
                    </a>
                </div>
                {% endif %}
                {% endfor %}
            </div>
            {% endfor %}

        </div>
    </div>
{% endblock %}
